import java.util.Scanner;

class Person {
    protected String name;
    protected String email;

    public void inputBasicInfo(Scanner sc) {
        System.out.print("Enter name: ");
        name = sc.nextLine();
        System.out.print("Enter email: ");
        email = sc.nextLine();
    }

    public void displayBasicInfo() {
        System.out.println("Name: " + name);
        System.out.println("Email: " + email);
    }
}

// Vendor class
class Vendor extends Person {
    private String vendorId;
    private String phoneNumber;
    private String[] products = new String[3];

    public void inputVendor(Scanner sc) {
        inputBasicInfo(sc);
        System.out.print("Enter vendor ID: ");
        vendorId = sc.nextLine();
        System.out.print("Enter phone number: ");
        phoneNumber = sc.nextLine();

        for (int i = 0; i < products.length; i++) {
            System.out.print("Enter product " + (i + 1) + ": ");
            products[i] = sc.nextLine();
        }
    }

    public void displayVendor() {
        displayBasicInfo();
        System.out.println("Vendor ID: " + vendorId);
        System.out.println("Phone: " + phoneNumber);
        System.out.println("Products Supplied:");
        for (String product : products) {
            System.out.println("- " + product);
        }
    }
}

// Abstract Customer class
abstract class Customer extends Person {
    protected String custId;
    protected String creditClass;
    protected double discount;
    protected String plan;

    public void inputCustomer(Scanner sc) {
        inputBasicInfo(sc);
        System.out.print("Enter customer ID: ");
        custId = sc.nextLine();
        System.out.print("Enter credit class: ");
        creditClass = sc.nextLine();
        System.out.print("Enter discount: ");
        discount = Double.parseDouble(sc.nextLine());
        System.out.print("Enter plan: ");
        plan = sc.nextLine();
    }

    public void displayCustomer() {
        displayBasicInfo();
        System.out.println("Customer ID: " + custId);
        System.out.println("Credit Class: " + creditClass);
        System.out.println("Discount: " + discount);
        System.out.println("Plan: " + plan);
    }
}

// Individual Customer
class IndividualCustomer extends Customer {
    private String phoneNumber;

    public void inputIndividualCustomer(Scanner sc) {
        inputCustomer(sc);
        System.out.print("Enter phone number: ");
        phoneNumber = sc.nextLine();
    }

    public void displayIndividualCustomer() {
        displayCustomer();
        System.out.println("Phone Number: " + phoneNumber);
    }
}

// Company Customer
class CompanyCustomer extends Customer {
    private String relationshipManager;
    private double creditLine;
    private String[] extensions = new String[3];
    private String[] phoneNumbers = new String[3];

    public void inputCompanyCustomer(Scanner sc) {
        inputCustomer(sc);
        System.out.print("Enter Relationship Manager: ");
        relationshipManager = sc.nextLine();
        System.out.print("Enter Credit Line: ");
        creditLine = Double.parseDouble(sc.nextLine());

        for (int i = 0; i < extensions.length; i++) {
            System.out.print("Enter extension " + (i + 1) + ": ");
            extensions[i] = sc.nextLine();
        }

        for (int i = 0; i < phoneNumbers.length; i++) {
            System.out.print("Enter phone number " + (i + 1) + ": ");
            phoneNumbers[i] = sc.nextLine();
        }
    }

    public void displayCompanyCustomer() {
        displayCustomer();
        System.out.println("Relationship Manager: " + relationshipManager);
        System.out.println("Credit Line: " + creditLine);
        System.out.println("Extensions:");
        for (String ext : extensions) {
            System.out.println("- " + ext);
        }
        System.out.println("Phone Numbers:");
        for (String num : phoneNumbers) {
            System.out.println("- " + num);
        }
    }
}
public class ABCTelApp {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        // Vendor Input
        Vendor vendor = new Vendor();
        System.out.println("\n--- Enter Vendor Info ---");
        vendor.inputVendor(sc);

        // Individual Customer Input
        IndividualCustomer indCust = new IndividualCustomer();
        System.out.println("\n--- Enter Individual Customer Info ---");
        indCust.inputIndividualCustomer(sc);

        // Company Customer Input
        CompanyCustomer compCust = new CompanyCustomer();
        System.out.println("\n--- Enter Company Customer Info ---");
        compCust.inputCompanyCustomer(sc);

        // Display all info
        System.out.println("\n--- Vendor Info ---");
        vendor.displayVendor();

        System.out.println("\n--- Individual Customer Info ---");
        indCust.displayIndividualCustomer();

        System.out.println("\n--- Company Customer Info ---");
        compCust.displayCompanyCustomer();

        sc.close();
    }
}
